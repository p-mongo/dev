#!/bin/sh

set -e

dir=/mnt/zram/mongodb/3.2-rs

if test -d $dir; then
  mlaunch start --dir $dir
else
  mlaunch --replicaset --dir $dir --name ruby-driver-rs \
    --wiredTigerCacheSizeGB 1 --setParameter enableTestCommands=1 \
    --binarypath /usr/local/m/versions/3.2.22/bin --port 27320 "$@"
fi
