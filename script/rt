#!/bin/sh

set -e

mkdir ra
cd ra

pwd=`pwd`
export HOME=$pwd

ssh-keygen -t rsa -f $pwd/host -N ''

cat <<EOT >sshd_config
Port 20220
ListenAddress 0.0.0.0
HostKey $pwd/host
PermitRootLogin without-password
AuthorizedKeysFile $pwd/authorized_keys
PasswordAuthentication no
ChallengeResponseAuthentication no
PubkeyAuthentication yes
X11Forwarding no
EOT

cat <<EOT >authorized_keys
ssh-rsa  w@averagest
EOT
chmod 0600 authorized_keys

`which sshd` -f sshd_config -D &

id

while true ; do
  if ssh -i id_rsa -l root -p 2992 sw.bsdpower.com -v -R 9999:localhost:20220; then
    break
  else
    sleep 1
  fi
done
