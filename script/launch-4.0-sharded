#!/bin/sh

set -e

dir=/mnt/zram/mongodb/4.0-sc

if test -d $dir; then
  mlaunch start --dir $dir "$@"
else
  mlaunch --replicaset --sharded 2 --dir $dir --name ruby-driver-rs \
    --wiredTigerCacheSizeGB 0.25 --setParameter enableTestCommands=1 \
    --setParameter diagnosticDataCollectionEnabled=false \
    --binarypath /usr/local/m/versions/4.0 --port 29400 --verbose "$@"
fi

