#!/bin/sh

set -e

dir=/var/mongodb/2.6-rs

if test -d $dir; then
  mlaunch start --dir $dir
else
  mlaunch --replicaset --dir $dir --name ruby-driver-rs \
    --setParameter enableTestCommands=1 \
    --binarypath /usr/local/m/versions/2.6.12/bin --port 27200 "$@"
fi

