#!/bin/sh

set -e

dir=/var/mongodb/4.0-single

if test -d $dir; then
  mlaunch start --dir $dir
else
  mlaunch --single --dir $dir \
    --wiredTigerCacheSizeGB 0.25 --setParameter enableTestCommands=1 \
    --binarypath /usr/local/m/versions/4.0.0/bin --port 27190 "$@"
fi

