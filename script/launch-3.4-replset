#!/bin/sh

set -e

dir=/mnt/zram/mongodb/3.4-rs
bindir=/usr/local/m/versions/3.4.18/bin

if test -d $dir; then
  mlaunch start --dir $dir
else
  mlaunch --replicaset --dir $dir --name ruby-driver-rs \
    --wiredTigerCacheSizeGB 1 --setParameter enableTestCommands=1 \
    --binarypath $bindir --port 27340 "$@"
fi
