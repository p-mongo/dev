#!/bin/sh

set -e

mkdir ra
cd ra

pwd=`pwd`
export HOME=$pwd

url=https://bin.equinox.io/c/4VmDzA7iaHb/ngrok-stable-linux-amd64.zip

curl -o `basename $url` $url
unzip `basename $url`

ssh-keygen -t rsa -f $pwd/ssh_host_rsa_key -N ''

cat <<EOT >sshd_config
Port 20220
ListenAddress 0.0.0.0
HostKey $pwd/ssh_host_rsa_key
PermitRootLogin no
AuthorizedKeysFile $pwd/authorized_keys
PasswordAuthentication no
ChallengeResponseAuthentication no
PubkeyAuthentication yes
X11Forwarding no
EOT

cat <<EOT >authorized_keys
ssh-rsa  w@averagest
EOT
chmod 0600 authorized_keys

`which sshd` -f sshd_config -D &

cat <<EOT >ngrok.conf
authtoken: 1Tqymp55wca3UsdhaWtVXamLY4N_5WsxXASymhHZ19U2tkuyc
tunnels:
  ssh:
    addr: 22
    proto: tcp
EOT

./ngrok start --config ngrok.conf --all
